<%- include('partials/_header') %>


<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/" method="post">
                        <div class="form-group mt-4">
                            <input type="text" name="name" value="<%= data.name %>" placeholder="name" class="form-control">
                        </div>
                        <div class="form-group mt-4">
                            <input type="text" name="address" value="<%= data.address %>" placeholder="Address" class="form-control">
                        </div>
                        <div class="form-group mt-4">
                            <input type="text" name="phone" value="<%= data.phone %>" placeholder="Phone" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary mt-4">Save Customer
                        </button>
                    </form> 
                </div>
            </div>
        </div>
    </div>
</div>





<%- include('partials/_footer') %>